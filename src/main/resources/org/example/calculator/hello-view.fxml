<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="240.0" prefWidth="279.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/18" fx:controller="org.example.calculator.MyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" spacing="10.0" HBox.Hgrow="ALWAYS">
        <TextField fx:id="inputLeft" prefHeight="30.0" prefWidth="150.0" />
        <TextField fx:id="inputRight" prefHeight="30.0" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0" HBox.Hgrow="ALWAYS">
        <Button onAction="#MyButtonClick" prefHeight="30.0" prefWidth="50.0" text="+" />
        <Button onAction="#MyButtonClick" prefHeight="30.0" prefWidth="50.0" text="-" />
        <Button onAction="#MyButtonClick" prefHeight="30.0" prefWidth="50.0" text="*" />
        <Button onAction="#MyButtonClick" prefHeight="30.0" prefWidth="50.0" text="/" />
        <Button onAction="#MyButtonClick" prefHeight="30.0" prefWidth="50.0" text="\%" />
    </HBox>
    <Label fx:id="outputLabel">
        <font>
            <Font size="24.0" />
        </font></Label>
</VBox>
